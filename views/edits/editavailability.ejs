<H2>Pick user and timetable:</H2>
<select id="UserSelect" name="select User">
    <% users.forEach(user => { %>
    <option idUser="<%= user.idUser %>"><%= user.name%></option>
    <% }); %>
</select>
<select id="timetableSelect" name="select timetable">
    <% timetables.forEach(timetable => { %>
    <option idTimetable="<%= timetable.idTimetable %>"><%= timetable.name%></option>
    <% }); %>
</select>
<button onclick="updateAvailabilitiestable(document.getElementById('timetableSelect'), document.getElementById('UserSelect'))" >Load timetable</button>
<p>Pick 1 if user is available in selected time, or 0 if he/she is not.</p>
